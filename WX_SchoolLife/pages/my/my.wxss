.UCenter-bg {
  background-image: url('https://7363-schoolgzgsxy-2g07k3mh30f9fcde-1305126347.tcb.qcloud.la/system/96411614765679_.pic.jpg?sign=8274bb978c7309d852fc3f042a185b84&t=1614861554');
  background-size: cover;
  height: 450rpx;
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.avatar{
  width: 150rpx;
  height: 150rpx;
  overflow:hidden;  
  border-radius: 50%; 
} 

.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg image {
  width: 200rpx;
  height: 200rpx;
}

.UCenter-bg .gif-wave {
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;
  height: 100rpx;
}

map,
.mapBox {
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;
  height: 100rpx;
}

map,
.mapBox {
  width: 750rpx;
  height: 300rpx;
}

.form-back{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.7);
  z-index: 199;
  overflow: hidden;
}
.form-box{
  position: fixed;
  top: 40vh;
  left: 5vw;
  width: 90vw;
  box-sizing: border-box;
  padding:20rpx 20rpx;
  background-color: white;
  border-radius: 20rpx;
   z-index: 299;               
  box-shadow: 1px 1px 3px 1px #eee;
}
.form-box .logo{
  width: 60vw;
  height: 60vw;
  margin: 0 auto;
  display: block;
}
.form-box input{
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 10rpx;
  box-shadow: 1px 1px 2px 1px  rgb(63, 159, 214);
  padding-left: 10rpx;
  margin-top: 20rpx;
}
.form-box  .submit{
   height: 80rpx;
   line-height: 80rpx;
   width: 60vw;
   margin:20rpx auto;
   border-radius: 20rpx;
   background-color: rgb(53, 173, 243);
   color: white;
   text-align: center;
}

.form-box picker{
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 10rpx;
  box-shadow: 1px 1px 2px 1px  rgb(63, 159, 214);
  padding-left: 10rpx;
  margin-top: 20rpx;
}